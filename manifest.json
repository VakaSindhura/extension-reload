{
  "name": "Reload",
  "version": "1.0",
  "manifest_version" : 2,
  "description": "Reloads Active tab and downloaded extensions",
  "author": "Sindhura Vaka",
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/Reload.png"
  },
  "icons" : {
    "16": "images/reload-16.png",
    "32": "images/reload-32.png",
    "64": "images/reload-64.png",
    "128": "images/reload-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab", "notifications", "contextMenus", "tabs", "management", "storage"
  ],
  "commands": {
    "reload_extensions": {
        "description": "Shortcut to reload",
        "suggested_key": {
            "default": "Ctrl+Q"
        }
    }
}
}
