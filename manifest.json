{
  "name": "Reloads current tab and extension page",
  "version": "1.0",
  "manifest_version" : 2,
  "description": "Reload Reload yayyy!",
  "author": "Sindhura Vaka",
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/somebullshit.png"
    // "default_popup": "index.html" // comment this
  },
  "icons" : {
      "16": "images/reload-16.png",
      "32": "images/reload-32.png",
      "64": "images/reload-64.png",
      "128": "images/reload-128.png"
  },
  "permissions": [
    "declarativeContent", "activeTab", "notifications", "contextMenus", "tabs", "management"
  ]
}
